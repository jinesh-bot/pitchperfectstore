<%- include('./partials/mainheader.ejs') %>

<!-- Breadcrumb -->
<div class="bg-gray-100 py-3">
    <div class="container mx-auto px-4">
        <div class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-gray-500 hover:text-gray-700">Home</a>
            <span class="text-gray-400">/</span>
            <a href="/products" class="text-gray-500 hover:text-gray-700">Products</a>
            <span class="text-gray-400">/</span>
            <span class="text-gray-700"><%= product.name %></span>
        </div>
    </div>
</div>

<!-- Product Section -->
<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Product Images -->
        <div class="space-y-4">
            <!-- Main Image -->
            <div class="border rounded-lg overflow-hidden">
                <img src="<%= product.images[0] %>" 
                     alt="<%= product.name %>" 
                     class="w-full h-96 object-cover"
                     id="mainImage">
            </div>
            <!-- Thumbnails -->
            <div class="grid grid-cols-4 gap-4">
                <% product.images.forEach((image, index) => { %>
                    <div class="border rounded-lg overflow-hidden cursor-pointer hover:border-blue-500"
                         onclick="changeImage('<%= image %>')">
                        <img src="<%= image %>" 
                             alt="<%= product.name %> thumbnail" 
                             class="w-full h-24 object-cover">
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Product Info -->
        <div class="space-y-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900"><%= product.name %></h1>
                <div class="flex items-center mt-2">
                    <div class="flex items-center">
                        <% for(let i = 0; i < 5; i++) { %>
                            <svg class="w-5 h-5 <%= i < product.rating ? 'text-yellow-400' : 'text-gray-300' %>" 
                                 fill="currentColor" 
                                 viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        <% } %>
                        <span class="ml-2 text-gray-600">(<%= product.reviews?.length || 0 %> reviews)</span>
                    </div>
                </div>
            </div>

            <!-- Price -->
            <div class="flex items-center space-x-4">
                <span class="text-3xl font-bold text-gray-900">₹<%= product.price %></span>
                <% if(product.discount) { %>
                    <span class="text-xl text-gray-500 line-through">₹<%= product.price + product.discount %></span>
                    <span class="bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded">
                        <%= Math.round((product.discount / (product.price + product.discount)) * 100) %>% OFF
                    </span>
                <% } %>
            </div>

            <!-- Stock Status -->
            <div class="flex items-center space-x-2">
                <% if(product.stock > 0) { %>
                    <span class="text-green-600">In Stock</span>
                    <span class="text-gray-500">(<%= product.stock %> available)</span>
                <% } else { %>
                    <span class="text-red-600">Out of Stock</span>
                <% } %>
            </div>

            <!-- Description -->
            <div class="border-t pt-4">
                <h2 class="text-lg font-semibold mb-2">Description</h2>
                <p class="text-gray-600"><%= product.description %></p>
            </div>

            <!-- Add to Cart Form -->
            <form action="/cart/add" method="POST" class="space-y-4">
                <input type="hidden" name="productId" value="<%= product._id %>">
                
                <!-- Size Selection (if applicable) -->
                <% if(product.sizes && product.sizes.length > 0) { %>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Size</label>
                        <select name="size" class="w-full border rounded-md p-2">
                            <% product.sizes.forEach(size => { %>
                                <option value="<%= size %>"><%= size %></option>
                            <% }); %>
                        </select>
                    </div>
                <% } %>

                <!-- Quantity -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
                    <div class="flex items-center space-x-4">
                        <button type="button" 
                                onclick="updateQuantity(-1)" 
                                class="border rounded-md px-3 py-1">
                            -
                        </button>
                        <input type="number" 
                               name="quantity" 
                               id="quantity" 
                               value="1" 
                               min="1" 
                               max="<%= product.stock %>" 
                               class="w-20 text-center border rounded-md"
                               readonly>
                        <button type="button" 
                                onclick="updateQuantity(1)" 
                                class="border rounded-md px-3 py-1">
                            +
                        </button>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4">
                    <button type="submit" 
                            class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700">
                        Add to Cart
                    </button>
                    <button type="button" 
                            onclick="addToWishlist('<%= product._id %>')"
                            class="border border-gray-300 px-6 py-3 rounded-md hover:bg-gray-50">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                    </button>
                </div>
            </form>

            <!-- Additional Info -->
            <div class="border-t pt-4 space-y-4">
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-gray-600">Free shipping on orders over ₹1000</span>
                </div>
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    <span class="text-gray-600">30-day return policy</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related Products -->
<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold mb-6">Related Products</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% product.relatedProducts?.forEach(relatedProduct => { %>
            <div class="border rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                <a href="/products/<%= relatedProduct._id %>">
                    <img src="<%= relatedProduct.images[0] %>" 
                         alt="<%= relatedProduct.name %>" 
                         class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold"><%= relatedProduct.name %></h3>
                        <p class="text-gray-600">₹<%= relatedProduct.price %></p>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>
</div>

<!-- JavaScript for Image Gallery and Quantity -->
<script>
function changeImage(imageSrc) {
    document.getElementById('mainImage').src = imageSrc;
}

function updateQuantity(change) {
    const input = document.getElementById('quantity');
    const currentValue = parseInt(input.value);
    const maxStock = parseInt(input.getAttribute('max'));
    
    let newValue = currentValue + change;
    
    // Ensure value is between 1 and max stock
    if (newValue < 1) newValue = 1;
    if (newValue > maxStock) newValue = maxStock;
    
    input.value = newValue;
}

function addToWishlist(productId) {
    // You can implement wishlist functionality here
    fetch(`/wishlist/add/${productId}`, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Added to wishlist!');
        } else {
            alert('Please login to add to wishlist');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error adding to wishlist');
    });
}
</script>

<%- include('./partials/mainfooter.ejs') %> 